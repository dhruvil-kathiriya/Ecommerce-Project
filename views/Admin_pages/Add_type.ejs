<%- include("./Admin_Header") %>

    <section class="content-main">
        <div class="content-header">
            <h2 class="content-title">Add Type </h2>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row gx-5">
                    <div class="col-lg-9">
                        <section class="content-body p-xl-4">
                            <form action="/admin/type/insert_type" method="post">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="d-flex align-items-center mb-3">
                                            <label class="form-label col-lg-4">Select category</label>
                                            <select class="form-select" name="categoryId" id="catId"
                                                onchange="return getsubcatData()">
                                                <option>-- Select category --</option>
                                                <% catData.map((v,i)=>{ %>
                                                    <option value="<%= v.id %>">
                                                        <%= v.category_name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="d-flex align-items-center mb-3">
                                            <label class="form-label col-lg-4">Select Subcategory</label>
                                            <select class="form-select" name="subcategoryId" id="subcatId"
                                                onchange="return getextracatData()">
                                                <option>-- Select Subcategory --</option>
                                                <% subcatData.map((v,i)=>{ %>
                                                    <option value="<%= v.id %>">
                                                        <%= v.subcategory_name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="d-flex align-items-center mb-3">
                                            <label class="form-label col-lg-4">Select Extracategory</label>
                                            <select class="form-select" name="extracategoryId" id="extracatId"
                                                onchange="getbrandData()">
                                                <option>-- Select Extracategory --</option>
                                                <% extracatData.map((v,i)=>{ %>
                                                    <option value="<%= v.id %>">
                                                        <%= v.extracategory_name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="d-flex align-items-center mb-3">
                                            <label class="form-label col-lg-4">Select Brand</label>
                                            <select class="form-select" name="brandId" id="brandId">
                                                <option>-- Select Extracategory --</option>
                                                <% brandData.map((v,i)=>{ %>
                                                    <option value="<%= v.id %>">
                                                        <%= v.brand_name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="d-flex gx-4 align-items-center">
                                            <label class="form-label col-lg-4">Add Type</label>
                                            <input type="text" placeholder="Type" class="form-control" name="type_name">
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <button class="btn btn-primary" type="submit">Add Type</button>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("./Admin_Footer.ejs") %>