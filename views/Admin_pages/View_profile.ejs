<%- include('./Admin_Header') %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Profile </h2>
                <p>Admin Profile</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <aside class="col-lg-12 row justify-content-center">
                    <figure class="text-lg-center mt-4 align-items-center">
                        <img class="img-lg mb-3 img-avatar" id="avatarImage" src="<%= adminData.admin_image %>"
                            alt="User Photo">
                    </figure>
                    <div class="d-flex text-center">
                        <h6 class="ms-4 col-lg-3 mb-3">Name :</h6>
                        <p class="col-lg-6">
                            <%= adminData.name %>
                        </p><br>
                    </div>
                </aside>
            </div>
            <div class="col-lg-6">
                <aside class="col-lg-12">
                    <div class=" bg-light">
                        <h4 class="mt-15">Admin Details</h4>
                        <hr>

                        <div class="d-flex">
                            <h6 class="mb-0 col-lg-4 mb-3">Email :</h6>
                            <p class="col-lg-6">
                                <%= adminData.email %>
                            </p><br>
                        </div>
                        <div class="d-flex">
                            <h6 class="mb-0 col-lg-4 mb-3">Gender :</h6>
                            <p class="col-lg-6">
                                <%= adminData.gender %>
                            </p><br>
                        </div>
                        <div class="d-flex">
                            <h6 class="mb-0 col-lg-4 mb-3">Hobby :</h6>
                            <p class="col-lg-6">
                                <%= adminData.hobby %>
                            </p><br>
                        </div>
                        <div class="d-flex">
                            <h6 class="mb-0 col-lg-4 mb-3">City :</h6>
                            <p class="col-lg-6">
                                <%= adminData.city %>
                            </p><br>
                        </div>
                        <div class="d-flex">
                            <h6 class="mb-0 col-lg-4 mb-3">Desciption :</h6>
                            <p class="col-lg-6">
                                <%= adminData.description %>
                            </p><br>
                        </div>
                        <div class="d-flex mb-3">
                            <h6 class="mb-0z col-lg-4 mb-3">User Created On :</h6>
                            <p class="col-lg-6">
                                <%= adminData.created_date %>
                            </p><br>
                        </div>
                        <div class="d-flex align-items-center">
                            <a href="/admin/updateAdmin/<%= adminData.id %>" class="btn btn-primary" type="submit">Edit
                                Admin</a>
                        </div>
                    </div>
                </aside>
            </div>

        </div>
    </section>


    <%- include('./Admin_footer') %>