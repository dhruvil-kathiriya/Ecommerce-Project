<%- include("./Admin_Header") %>

    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Brands </h2>
                <p>Add, edit or delete a Brand</p>
            </div>
            <div>
                <form>
                    <div class="d-flex align-items-center">
                        <input type="text" placeholder="Search Brands" class="form-control bg-white" name="search"
                            value="<%= searchValue %>">
                        <button type="submit" class="btn btn-md m-2 rounded font-sm hover-up"
                            value="search">Search</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-start">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" />
                                            </div>
                                        </th>
                                        <th class="text-center">Category</th>
                                        <th class="text-center">Subcategory</th>
                                        <th class="text-center">Extracategory</th>
                                        <th class="text-center">Brand</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var bdata of brandData){ %>
                                        <tr class="">
                                            <td class="text-start">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" />
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <%= bdata.categoryId.category_name %>
                                            </td>
                                            <td class="text-center">
                                                <%= bdata.subcategoryId.subcategory_name %>
                                            </td>
                                            <td class="text-center">
                                                <%= bdata.extracategoryId.extracategory_name %>
                                            </td>
                                            <td class="text-center">
                                                <%= bdata.brand_name %>
                                            </td>
                                            <td class="text-center">
                                                <%if(bdata.isActive){%>
                                                    <a href="/admin/brand/isActive/<%=bdata.id%>"
                                                        class="badge rounded-pill alert-success">Active</a>
                                                    <% }else{ %>
                                                        <a href="/admin/brand/deActive/<%=bdata.id%>"
                                                            class="badge rounded-pill alert-danger">Inactive</a>
                                                        <% }%>
                                            </td>
                                            <td class="text-center">
                                                <div class="dropdown">
                                                    <a href="#" data-bs-toggle="dropdown"
                                                        class="btn btn-light rounded btn-sm font-sm"> <i
                                                            class="material-icons md-more_horiz"></i> </a>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="#">View detail</a>
                                                        <a class="dropdown-item" href="#">Edit info</a>
                                                        <a class="dropdown-item text-danger"
                                                            href="/admin/brand/deletebrand/<%=bdata.id%>">Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                            <% if(currentPage> 0){ %>
                                <a href="?pages=<%= currentPage - 1 %>&search=<%= searchValue %>"
                                    class="btn btn-primary" style="padding: 10px 16px;">
                                    Previous</a>
                                <% } %>
                                    <% if(currentPage> 0){ %>
                                        <a href="?pages=<%= currentPage - 1 %>&search=<%= searchValue %>"
                                            class="btn border" style="padding: 10px 16px;">
                                            <%= currentPage %>
                                        </a>
                                        <% } %>
                                            <a href="?pages=<%= currentPage %>&search=<%= searchValue %>"
                                                class="btn btn-primary" style="padding: 10px 16px;">
                                                <%= currentPage + 1 %>
                                            </a>
                                            <% if(totalDocument> currentPage + 1){ %>
                                                <a href="?pages=<%= currentPage + 1 %>&search=<%= searchValue %>"
                                                    class="btn border" style="padding: 10px 16px;">
                                                    <%= currentPage + 2 %>
                                                </a>
                                                <% } %>
                                                    <% if(totalDocument> currentPage + 1){ %>
                                                        <a href="?pages=<%= currentPage + 1 %>&search=<%= searchValue %>"
                                                            class="btn btn-primary" style="padding: 10px 16px;">Next</a>
                                                        <% } %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("./Admin_Footer.ejs") %>