<%- include("./Admin_Header") %>

    <section class="content-main">
        <div class="content-header">
            <h2 class="content-title">Change Password </h2>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row gx-5">
                    <div class="col-lg-9">
                        <section class="content-body p-xl-4">
                            <form action="/admin/updatenewpassword" method="post">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="d-flex gx-4 align-items-center mb-3">
                                            <label class="form-label col-lg-6">Old Password</label>
                                            <input type="password" placeholder="old Password" class="form-control"
                                                name="oldpass">
                                        </div>
                                        <div class="d-flex gx-4 align-items-center mb-3">
                                            <label class="form-label col-lg-6">New Password</label>
                                            <input type="password" placeholder="new Password" class="form-control"
                                                name="newpass">
                                        </div>
                                        <div class="d-flex gx-4 align-items-center mb-3">
                                            <label class="form-label col-lg-6">Confirm Password</label>
                                            <input type="password" placeholder="confirm Password" class="form-control"
                                                name="conpass">
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <button class="btn btn-primary" type="submit">Update Password</button>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <%- include("./Admin_Footer") %>