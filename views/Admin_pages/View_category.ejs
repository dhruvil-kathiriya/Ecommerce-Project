<%- include("./Admin_Header") %>

    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Categories </h2>
                <p>Add, edit or delete a category</p>
            </div>
            <div>
                <form>
                    <div class="d-flex align-items-center">
                        <input type="text" placeholder="Search Categories" class="form-control bg-white" name="search"
                            value="<%= searchValue %>">
                        <button type="submit" class="btn btn-md m-2 rounded font-sm hover-up"
                            value="search">Search</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-start">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" />
                                            </div>
                                        </th>
                                        <th class="text-center">Category</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(catdata !="" ){ %>
                                        <% for(var ctdata of catdata){ %>
                                            <tr class="">
                                                <td class="text-start">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" />
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <%= ctdata.category_name %>
                                                </td>
                                                <td class="text-center">
                                                    <%if(ctdata.isActive){%>
                                                        <a href="/admin/category/isActive/<%=ctdata.id%>"
                                                            class="badge rounded-pill alert-success">Active</a>
                                                        <% }else{ %>
                                                            <a href="/admin/category/deActive/<%=ctdata.id%>"
                                                                class="badge rounded-pill alert-danger">Inactive</a>
                                                            <% }%>
                                                </td>
                                                <td class="text-center">
                                                    <div class="dropdown">
                                                        <a class="dropdown-item text-secondary border rounded"
                                                            href="/admin/category/updatecategory/<%= ctdata.id %>"><i
                                                                class="material-icons md-edit"></i>Update</a>
                                                    </div>
                                                    <div class="dropdown">
                                                        <a class="dropdown-item text-danger border rounded"
                                                            href="/admin/category/deletecategory/<%= ctdata.id %>"><i
                                                                class="material-icons md-delete_forever"></i>Delete</a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }%>
                                                <% }else{ %>
                                                    <td class="text-center" colspan="3">
                                                        <p class="text-center text-danger">No Record Found</p>
                                                    </td>
                                                    <% } %>
                                                        </tr>
                                </tbody>
                            </table>
                            <% if(currentPage> 0){ %>
                                <a href="?pages=<%= currentPage - 1 %>&search=<%= searchValue %>"
                                    class="btn btn-primary" style="padding: 10px 16px;">
                                    Previous</a>
                                <% } %>
                                    <% if(currentPage> 0){ %>
                                        <a href="?pages=<%= currentPage - 1 %>&search=<%= searchValue %>"
                                            class="btn border" style="padding: 10px 16px;">
                                            <%= currentPage %>
                                        </a>
                                        <% } %>
                                            <a href="?pages=<%= currentPage %>&search=<%= searchValue %>"
                                                class="btn btn-primary" style="padding: 10px 16px;">
                                                <%= currentPage + 1 %>
                                            </a>
                                            <% if(totalDocument> currentPage + 1){ %>
                                                <a href="?pages=<%= currentPage + 1 %>&search=<%= searchValue %>"
                                                    class="btn border" style="padding: 10px 16px;">
                                                    <%= currentPage + 2 %>
                                                </a>
                                                <% } %>
                                                    <% if(totalDocument> currentPage + 1){ %>
                                                        <a href="?pages=<%= currentPage + 1 %>&search=<%= searchValue %>"
                                                            class="btn btn-primary" style="padding: 10px 16px;">Next</a>
                                                        <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include("./Admin_Footer.ejs") %>